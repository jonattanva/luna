{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "sections": {
      "description": "An array of sections in the form",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the section"
          },
          "description": {
            "type": "string",
            "description": "The description of the section"
          },
          "fields": {
            "type": "array",
            "description": "An array of fields in the section",
            "items": {
              "type": "object",
              "properties": {}
            }
          },
          "separator": {
            "type": "boolean",
            "description": "Whether to display a separator after the section"
          },
          "order": {
            "type": "integer",
            "description": "The order of the section in the form"
          }
        }
      }
    }
  }
}
