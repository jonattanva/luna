{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
